# Backpack Pi Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# File Browser Root Directory
# Default: current working directory
FILE_ROOT=/home/pi

# Authentication
# Default sudo user (set automatically on first run)
SUDO_USER=lukec309

# Session secret (CHANGE THIS IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-me-in-production

# Data Storage
# Directory for SQLite databases (sessions, roles)
# Default: current working directory
DATA_DIR=/opt/backpackpi/data

# Security
# Set to true if running behind HTTPS proxy/reverse proxy
HTTPS=false

# Debug
# Enable verbose file operation logging
DEBUG_FILES=true
